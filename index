<?php
  $a = $_POST['a'];
  $b = $_POST['b'];
  $radio=$_POST['op'];
  if ($_POST['make_a_count'])
  {
      if ($radio=='+'){$c = $a + $b; echo "sum=" . $c.'<br>';}
      if ($radio=='-'){$c = $a - $b; echo "sub=" . $d.'<br>';}
      if ($radio=='*'){$c = $a * $b; echo "mul=" . $e.'<br>';}
      if ($radio=='/'){$c = $a / $b; echo "div=" . $f.'<br>';}
?>  
